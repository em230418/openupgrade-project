FROM odoo:14.0
USER root
RUN ln -s /opt/vendor/14.0 /opt/addons
RUN ln -s /opt/ou14 /opt/ou
COPY ./openupgradelib /opt/openupgradelib

# take away psycopg2, not to build other version
RUN cp /opt/openupgradelib/requirements.txt /tmp/requirements.txt
RUN sed -i '/psycopg2/d' /tmp/requirements.txt

RUN python3 -m pip install -r /tmp/requirements.txt
RUN python3 -m pip install /opt/openupgradelib

USER odoo
